{
  "$schema": "https://raw.githubusercontent.com/danger/peril/master/peril-settings-json.schema",
  "settings": {
    "env_vars": ["SLACK_RFC_WEBHOOK_URL"],
    "ignored_repos": ["artsy/looker", "artsy/clouds", "artsy/design", "artsy/hokusai"],
    "modules": ["danger-plugin-spellcheck", "danger-plugin-yarn", "@slack/client"]
  },
  "rules": {
    "create (ref_type == tag)": "artsy/artsy-danger@org/new-release.ts",
    "pull_request": "artsy/artsy-danger@org/all-prs.ts",
    "pull_request.closed": "artsy/artsy-danger@org/closed-prs.ts",
    "issues.opened": "artsy/artsy-danger@danger/new-rfc.ts",
    "issue_comment": "artsy/artsy-danger@org/markAsMergeOnGreen.ts",
    "status.success": "artsy/artsy-danger@org/mergeOnGreen.ts"
  },
  "repos": {
    "artsy/reaction": {
      "pull_request": "danger/pr.ts"
    },
    "artsy/positron": {
      "pull_request": "dangerfile.ts"
    }
  },
  "tasks": {
    "slack-dev-channel": "artsy/artsy-danger@tasks/slack-dev-channel.ts",
    "daily-license-check": "artsy/artsy-danger@tasks/daily-license-check.ts"
  },
  "scheduler": {
    "0 0 12 * * ?": "daily-license-check"
  }
}
