{
  "name": "artsy-danger",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/artsy-danger",
  "author": "Orta Therox <orta@artsymail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged"
  },
  "dependencies": {},
  "devDependencies": {
    "@slack/client": "^3.15.0",
    "@types/jest": "^22.1.0",
    "@types/node": "^9.3.0",
    "danger": "^3.1.3",
    "danger-plugin-spellcheck": "^1.2.2",
    "danger-plugin-yarn": "^1.2.1",
    "github-webhook-event-types": "^1.0.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "prettier": "^1.10.2",
    "ts-jest": "^22.0.1",
    "typescript": "^2.6.2"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  },
  "lint-staged": {
    "*.@(ts|tsx)": ["yarn prettier --write", "git add"],
    "*.test.@(ts|tsx)": ["jest"],
    "*.json": ["yarn prettier --write", "git add"]
  }
}
